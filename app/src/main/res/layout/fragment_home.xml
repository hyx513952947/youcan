<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:clipChildren="false"
    android:background="#929292"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="#ffffff"
        app:layout_behavior="top.huangguaniu.youcan.ui.main.views.behaviors.HomeHeadBehavior"
        android:paddingTop="8dp"
        android:elevation="3dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imageView_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imageView_notify"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@+id/imageView_more"
            android:src="@drawable/icon_ring" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imageView_more"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/icon_more" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imageView_search"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@+id/imageView_notify"
            android:src="@drawable/icon_search" />
    </RelativeLayout>
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:text="22" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:text="22" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:text="22" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:text="22" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:text="22" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:text="22" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <top.huangguaniu.youcan.ui.main.views.PopMenuButton
        android:id="@+id/button_note"
        android:layout_margin="40dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/shap_note_button"
        app:layout_behavior="top.huangguaniu.youcan.ui.main.views.behaviors.HomeNoteButtonBehavior" />

</android.support.design.widget.CoordinatorLayout>