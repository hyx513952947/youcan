<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/fragment_home">
    <fragment
        android:id="@+id/fragment_main"
        android:name="top.huangguaniu.youcan.ui.main.MainFragment"
        tool:layout ="@layout/main_fragment"
        android:label="home">
        <argument android:name="name"
            android:defaultValue="aa"
            app:type="string"/>
        <action
            android:id="@+id/action_fragment_main_to_fragment_diary"
            app:destination="@id/fragment_diary" />
        <action
            android:id="@+id/action_fragment_main_to_fragment_home"
            app:destination="@id/fragment_home" />
    </fragment>
    <fragment
        tool:layout= "@layout/fragment_diary_editor"
        android:label="diary"
        android:id="@+id/fragment_diary"
        android:name="top.huangguaniu.youcan.ui.main.DiaryEditorFragment"
        >
    </fragment>
    <fragment
        tool:layout= "@layout/fragment_home"
        android:label="home"
        android:id="@+id/fragment_home"
        android:name="top.huangguaniu.youcan.ui.main.HomeFragment"
        >
    </fragment>
</navigation>